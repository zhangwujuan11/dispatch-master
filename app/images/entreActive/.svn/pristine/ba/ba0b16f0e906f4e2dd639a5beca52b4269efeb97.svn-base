@keyframes living {
    0% {
        transform: scale(1);
        opacity: 0.5;
    }
    50% {
        transform: scale(0.8);
        opacity: 1;
        /*圆形放大的同时，透明度逐渐减小为0*/
    }
    100% {
        transform: scale(1);
        opacity: 0.5;
    }
}
.shop{
    padding: 10px 0;
}
.shop-item{
    line-height: 40px;
    width: 90%;
    padding: 0 10px;
    margin: 10px auto 0;
    background: #FFFFFF;
    box-shadow: 0px 2px 15px 1px rgba(0, 0, 0, 0.06);
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.shop-title{
    font-size: 15px;
    font-weight: 600;
    color: #F5B10F;
    text-align: center;
    margin-left: 30px;
}
.shop-item h3{font-weight: bold; width: 47%; text-align: center;}
.shop-address{display: flex;justify-content: space-between;align-items: center;padding:10px 15px;}

.top{
    height: 310px;
    text-align: center;
    position: relative;
}
.ding{width: 139px;height: 35px;margin-top: 35px;}
.top_time{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
}
.top_time .time_left{width: 70px;height: 30px;margin-left: 20px;margin-top: 86px;}
.top_time .time_right{width: 35px;height: 15px;margin-right: 20px;}
.time_day{height: 122px;}
.time_text{
    font-size: 160px;
    color: #FEFEFE;
    background: linear-gradient(-33deg, #FE8C00 0%, #F83600 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;}
.shop_swiper{
    width: 90%;
   height: 166px;
   margin-top: 10px;
   /* height: 320px;*/
   overflow: hidden;
   margin: 0 auto;
   z-index: 1;
}
.shop-dateil{
    position: absolute;
    left: 0;
    right: 0;
    width: 90%;
    min-height: 219px;
    border-radius: 8px; 
    background: #FFFFFF; 
    box-shadow: 0px 0px 25px 2px rgba(0, 0, 0, 0.1);
    margin: -10px auto 0;
    z-index: 3;
}
.shop-dateil li{text-align: center;font-size: 14px; color: #333333;padding-top: 20px;}
.shop-dateil p{text-align: center;font-size: 18px; color: #1685F7;padding-top: 20px;}
.shop-dateil div{padding: 10px 15px;}
.activeIndex{
    height: 100%;
    background: url('../images/active/activebg.png');
    background-size: 100% 100%;
}